{
	"name": "eye",
	"version": "0.2.1",
	"author": "tycrek <t@tycrek.com> (https://tycrek.com)",
	"scripts": {
		"wrangler": "node ./node_modules/wrangler/bin/wrangler.js",
		"build": "npm run build:app && npm run build:uijs",
		"build:app": "esbuild --bundle src/index.ts --format=esm --outfile=dist/_worker.js",
		"build:uijs": "esbuild --bundle src/frontend/ui.ts --format=esm --outfile=dist/ui.js",
		"pagery": "node ./node_modules/pagery/dist/pagery.js --output=dist/",
		"dev": "npm run build && npm run pagery && node ./node_modules/wrangler/bin/wrangler.js pages dev dist/ --kv eye",
		"publish": "npm run build && node ./node_modules/wrangler/bin/wrangler.js pages publish dist/ --project-name=eye"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20230307.0",
		"@shoelace-style/shoelace": "^2.4.0",
		"pagery": "^0.4.0",
		"shoelace-fontawesome-pug": "^6.2.1",
		"shoelace-pug-loader": "^1.0.2",
		"typescript": "^4.9.5",
		"wrangler": "^2.12.2"
	},
	"dependencies": {
		"hono": "^3.0.3"
	}
}
